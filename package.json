{
  "name": "top-down-web-rpg",
  "version": "1.0.0",
  "description": "A story-focused top-down web RPG built with Phaser 3",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "NODE_ENV=production vite build",
    "build:analyze": "vite build --mode analyze",
    "preview": "vite preview",
    "serve": "vite preview",
    "deploy:prepare": "npm run build:prod && npm run test:comprehensive",
    "deploy:gh-pages": "npm run deploy:prepare && gh-pages -d dist",
    "deploy:netlify": "npm run deploy:prepare && netlify deploy --prod --dir=dist",
    "optimize:assets": "node scripts/optimize-assets.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:comprehensive": "node tests/test-runner.js",
    "test:unit": "vitest --run tests/StorySystem.test.js tests/PowerSystem.test.js tests/SaveSystem.test.js",
    "test:integration": "vitest --run tests/GameManager.integration.test.js tests/StoryProgression.integration.test.js",
    "test:browser": "vitest --run tests/CrossBrowser.test.js",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix"
  },
  "keywords": [
    "phaser",
    "rpg",
    "game",
    "web",
    "story"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "phaser": "^3.70.0"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "happy-dom": "^12.0.0",
    "terser": "^5.19.0",
    "eslint": "^8.45.0",
    "gh-pages": "^5.0.0",
    "netlify-cli": "^15.0.0"
  }
}
